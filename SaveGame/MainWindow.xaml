<Window
    x:Class="SaveGame.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SaveGame.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SaveGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SaveGame.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="Black"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:CovertArtConverter x:Key="CovertArtConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter" />
        <converters:BooleanToVisibilityHiddenConverter x:Key="BooleanToVisibilityHiddenConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            VerticalAlignment="Top"
            Panel.ZIndex="10">
            <StackPanel Orientation="Horizontal">
                <Label
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="White">
                    Play
                </Label>
                <Label
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="White"
                    Opacity="0.5">
                    Playing
                </Label>
                <Label
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="White"
                    Opacity="0.5">
                    Played
                </Label>
            </StackPanel>
            <Border Margin="5,15,5,10" Background="#101010">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        Padding="8,6,8,6"
                        Content="Search for a game"
                        FontSize="20"
                        Foreground="White"
                        Opacity="0.5"
                        Visibility="{Binding SearchQuery.Length, Converter={StaticResource InvertBooleanToVisibilityConverter}}" />
                    <TextBox
                        x:Name="SearchTextBox"
                        Grid.Row="0"
                        Padding="6"
                        Background="Transparent"
                        BorderThickness="0"
                        CaretBrush="White"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                    <ProgressBar
                        Grid.Row="1"
                        Height="5"
                        Background="Transparent"
                        BorderThickness="0"
                        IsIndeterminate="True"
                        Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityHiddenConverter}}" />
                </Grid>
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <Border Padding="0,0,0,0">
                <StackPanel>
                    <StackPanel>
                        <Label
                            Margin="0,0,0,-8"
                            Content="Search results"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            Opacity="0.5" />
                        <StackPanel Orientation="Horizontal" Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Border
                                Width="180"
                                Height="220"
                                Margin="6"
                                Background="#101010" />
                            <Border
                                Width="180"
                                Height="220"
                                Margin="6"
                                Background="#101010" />
                            <Border
                                Width="180"
                                Height="220"
                                Margin="6"
                                Background="#101010" />
                            <Border
                                Width="180"
                                Height="220"
                                Margin="6"
                                Background="#101010" />
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding SearchResults}" Visibility="{Binding IsSearching, Converter={StaticResource InvertBooleanToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Image
                                        Width="180"
                                        Height="220"
                                        Margin="6"
                                        Source="{Binding Cover.Value.ImageId, Converter={StaticResource CovertArtConverter}}"
                                        Stretch="UniformToFill" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
